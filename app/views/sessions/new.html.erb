<div class="row">
  <div class="col-md-4">
  <h1>Login</h1>
    <%= form_tag login_path do |form| %>
      <div class="field">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, class: "form-control" %>
      </div>
      <div class="field">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
      <br>
      <div class="actions">
        <%= submit_tag 'Login', class: "btn btn-sm btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
